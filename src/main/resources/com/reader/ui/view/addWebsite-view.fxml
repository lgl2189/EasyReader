<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane dividerPositions="0.3" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reader.ui.view.AddWebsiteView">

    <!-- 左侧区域 -->
    <VBox spacing="10" style="-fx-padding: 15px;">
        <Button fx:id="addWebsiteBtn" text="添加新网站" />
        <ListView fx:id="websiteListView" VBox.vgrow="ALWAYS" />
    </VBox>

    <!-- 右侧区域 -->
    <StackPane>
        <!-- 添加表单 -->
        <GridPane fx:id="addFormPane">
            <Label text="网站URL:" GridPane.rowIndex="0" />
            <TextField fx:id="urlInputField" promptText="输入网站地址" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="网站名称:" GridPane.rowIndex="1" />
            <TextField fx:id="nameInputField" promptText="输入网站名称" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="XPath规则:" GridPane.rowIndex="2" />
            <TextField promptText="输入XPath规则" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="xpathInputField" />

            <Button fx:id="getXpathBtn" text="获取规则">
                <tooltip>
                    <Tooltip text="使用可视化窗口获取当前网站的XPath解析规则" />
                </tooltip>
            </Button>

            <Button fx:id="confirmAddBtn" prefWidth="106.0" text="添加网站" GridPane.columnSpan="2" GridPane.rowIndex="3">
                <tooltip>
                    <Tooltip text="点击保存新的网站配置" />
                </tooltip>
            </Button>

            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <!-- 详情面板 -->
        <VBox fx:id="detailPanel" spacing="15" style="-fx-padding: 20px;" visible="false">
            <Label style="-fx-font-weight: bold;" text="网站名称：" />
            <Label fx:id="nameDisplayLabel" />

            <Label style="-fx-font-weight: bold;" text="网站URL：" />
            <Label fx:id="urlDisplayLabel" />

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-weight: bold;" text="XPath规则：" />
                <TextField editable="false" style="-fx-min-width: 300px;" fx:id="xpathDisplayField" />
                <Button fx:id="updateXpathBtn" text="修改规则">
                    <tooltip>
                        <Tooltip text="更新当前网站的XPath解析规则" />
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
        <!-- 悬浮通知容器（置于最上层但允许穿透） -->
        <StackPane fx:id="notificationContainer"
                   alignment="TOP_CENTER"
                   style="-fx-padding: 20 0 0 0"
                   mouseTransparent="true"
                   pickOnBounds="false"/>
    </StackPane>
</SplitPane>